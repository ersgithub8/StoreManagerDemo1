<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/map"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Dashboard.MapsActivity"
    android:weightSum="10"
    >

    <fragment
        android:layout_weight="9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/googlmap"
        android:name="com.google.android.gms.maps.SupportMapFragment"></fragment>
<LinearLayout
    android:layout_weight="1"
    android:layout_below="@+id/googlmap"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="4">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:text="long press on your location and than press OK"
        android:gravity="center"
        android:textSize="15sp"
        android:textColor="#000000"></TextView>
    <Button
        android:id="@+id/ok_btn"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/green"
        android:textStyle="bold"
        android:text="OK"></Button>

</LinearLayout>


</LinearLayout>
